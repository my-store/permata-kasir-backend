generator client {
  provider = "prisma-client-js"
  output   = "../models"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int     @id @default(autoincrement())
  nama       String
  tlp        String  @unique
  password   String
  alamat     String
  foto       String? // URL foto
  online     Boolean @default(false)
  lastOnline String?

  // Child tables
  userRanking        UserRanking[]
  userRegisterTicket UserRegisterTicket[]

  createdAt DateTime
  updatedAt DateTime
}

model User {
  id       Int     @id @default(autoincrement())
  nama     String
  tlp      String  @unique
  password String
  alamat   String
  foto     String? // URL foto

  online     Boolean @default(false)
  lastOnline String?

  /**
   * ==========================================================
   * |  USER STATUS
   * |  =======================================================
   * |  1. active = Need to activate by admin
   * |  2. deactivatedAt = kapan admin memblokir user ini
   * |  3. deactivatedReason = alasan admin memblokir user ini
   */
  active            Boolean   @default(false)
  deactivatedAt     DateTime?
  deactivatedReason String?

  // Parent table
  userRanking   UserRanking? @relation(fields: [userRankingId], references: [id])
  userRankingId Int?

  // Child tables
  toko Toko[]

  createdAt DateTime
  updatedAt DateTime
}

model UserRanking {
  id   Int    @id @default(autoincrement())
  nama String

  // Parent table
  admin   Admin @relation(fields: [adminId], references: [id])
  adminId Int

  // Child tables
  user User[]

  createdAt DateTime
  updatedAt DateTime
}

/**
 * =====================================================
 * |  REGISTER SECURITY TABLE
 * |  =====================================================
 * |  Hanya dapat digunakan dalam waktu beberapa menit saja
 * |  jika batas waktu telah habis, tidak dapat digunakan
 * |  untuk registrasi lagi.
 * |  Menggunakan metode scheduling (nestjs-schedule).
 */
model UserRegisterTicket {
  id   Int    @id @default(autoincrement())
  code String @unique

  // Parent table
  admin   Admin @relation(fields: [adminId], references: [id])
  adminId Int
}

model Toko {
  id     Int    @id @default(autoincrement())
  nama   String
  alamat String
  tlp    String

  // Parent table
  user   User @relation(fields: [userId], references: [id])
  userId Int

  // Child tables
  produk             Produk[]
  jasa               Jasa[]
  diskon             Diskon[]
  member             Member[]
  memberRanking      MemberRanking[]
  transaksiPembelian TransaksiPembelian[]
  transaksiPenjualan TransaksiPenjualan[]

  createdAt DateTime
  updatedAt DateTime
}

model Produk {
  id         Int    @id @default(autoincrement())
  nama       String
  hargaPokok Int
  hargaJual  Int
  stok       Int

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Many to many relations
  diskon Diskon[]

  createdAt DateTime
  updatedAt DateTime
}

model Jasa {
  id    Int    @id @default(autoincrement())
  nama  String
  biaya Int

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Many to many relations
  diskon Diskon[]

  createdAt DateTime
  updatedAt DateTime
}

model Diskon {
  id         Int    @id @default(autoincrement())
  keterangan String // Misal Jum'at berkah
  nilai      Int // Persentase potongan

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Many to many relations
  produk Produk[]
  jasa   Jasa[]

  createdAt DateTime
  updatedAt DateTime
}

model Member {
  id     Int    @id @default(autoincrement())
  nama   String
  alamat String
  tlp    String

  // Parent table
  toko            Toko           @relation(fields: [tokoId], references: [id])
  tokoId          Int
  // Optional | nullable
  memberRanking   MemberRanking? @relation(fields: [memberRankingId], references: [id])
  memberRankingId Int?

  createdAt DateTime
  updatedAt DateTime
}

model MemberRanking {
  id   Int    @id @default(autoincrement())
  nama String

  // Potongan spesial member, tidak mempengaruhi diskon pada produk
  // Diskon pada produk tetap berlaku.
  potonganBelanja Int @default(0)

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Child tables
  member Member[]

  createdAt DateTime
  updatedAt DateTime
}

model TransaksiPembelian {
  id Int @id @default(autoincrement())

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  /**
   * =====================================================
   * |  JSON DATA - TIDAK BERGANTUNG DENGAN RELASI
   * |  =====================================================
   * |  Jika tabel produk dihapus, tidak akan berpengaruh
   * |  pada data JSON ini.
   */
  produk String // Example: [{ id: Important, nama, harga, dll }]

  createdAt DateTime
  updatedAt DateTime
}

model TransaksiPenjualan {
  id Int @id @default(autoincrement())

  // Parent table
  toko   Toko? @relation(fields: [tokoId], references: [id])
  tokoId Int?

  /**
   * =====================================================
   * |  JSON DATA - TIDAK BERGANTUNG DENGAN RELASI
   * |  =====================================================
   * |  Jika tabel produk dihapus, tidak akan berpengaruh
   * |  pada data JSON ini.
   */
  produk String // Example: [{ id: Important, nama, harga, dll }]

  createdAt DateTime
  updatedAt DateTime
}
