generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int     @id @default(autoincrement())
  nama       String
  tlp        String  @unique
  password   String
  foto       String  @default("") // URL foto
  online     Boolean @default(false)
  lastOnline String  @default("")

  // Child tables
  userRegisterTicket UserRegisterTicket[]

  createdAt DateTime
  updatedAt DateTime
}

model User {
  id       Int    @id @default(autoincrement())
  nama     String
  tlp      String @unique
  password String
  foto     String @default("") // URL foto

  online     Boolean @default(false)
  lastOnline String  @default("")

  active        Boolean @default(false) //init Need to activate by admin
  deactivatedAt String  @default("") // This is empty until admin block this user

  // Child tables
  toko Toko[]

  createdAt DateTime
  updatedAt DateTime
}

/**
 * =====================================================
 * |  REGISTER SECURITY TABLE
 * |  =====================================================
 * |  Hanya dapat digunakan dalam waktu beberapa menit saja
 * |  jika batas waktu telah habis, tidak dapat digunakan
 * |  untuk registrasi lagi.
 * |  Menggunakan metode scheduling (nestjs-schedule).
 */
model UserRegisterTicket {
  id   Int    @id @default(autoincrement())
  code String @unique

  // Parent table
  admin   Admin @relation(fields: [adminId], references: [id])
  adminId Int
}

model Toko {
  id Int @id @default(autoincrement())

  // Parent table
  user   User @relation(fields: [userId], references: [id])
  userId Int

  nama   String
  alamat String

  // Child tables
  produk             Produk[]
  member             Member[]
  diskon             Diskon[]
  jasa               Jasa[]
  karyawan           Karyawan[]
  transaksiPembelian TransaksiPembelian[]
  transaksiPenjualan TransaksiPenjualan[]

  createdAt DateTime
  updatedAt DateTime
}

model Karyawan {
  id   Int    @id @default(autoincrement())
  nama String

  // Tidak unique, jadi si karyawan dapat bekerja di semua toko yang ada di database.
  // Pengecekan terletak pada pada controller input karyawan,
  // jika nomor telah digunakan blokir permintaan input.
  tlp String

  password String
  foto     String @default("") // URL foto

  online     Boolean @default(false)
  lastOnline String  @default("")

  active        Boolean @default(false) // Need to activate by admin
  deactivatedAt String  @default("") // This is empty until admin block this user

  // Many to many relations
  toko Toko[]

  createdAt DateTime
  updatedAt DateTime
}

model Produk {
  id   Int    @id @default(autoincrement())
  nama String

  hargaPokok Int @default(0)
  hargaJual  Int @default(0)
  stok       Int @default(0)

  // Parent table
  toko     Toko    @relation(fields: [tokoId], references: [id])
  tokoId   Int
  diskon   Diskon? @relation(fields: [diskonId], references: [id])
  diskonId Int?

  createdAt DateTime
  updatedAt DateTime
}

model Jasa {
  id    Int    @id @default(autoincrement())
  nama  String
  biaya Int    @default(0)

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  createdAt DateTime
  updatedAt DateTime
}

model Member {
  id     Int    @id @default(autoincrement())
  nama   String
  alamat String
  tlp    String @unique

  // Jika ada diskon, harga diskon tetap berlaku + harga spesial member
  diskonPembelian Int @default(0)

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Child tables
  transaksiPenjualan TransaksiPenjualan[]

  createdAt DateTime
  updatedAt DateTime
}

model Diskon {
  id         Int    @id @default(autoincrement())
  keterangan String
  persen     Int    @default(0)

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Child table
  produk Produk[]

  createdAt DateTime
  updatedAt DateTime
}

model TransaksiPembelian {
  id     Int    @id @default(autoincrement())
  produk String // JSON format [{nama, harga, dll}]
  total  Int    @default(0)

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  createdAt DateTime
  updatedAt DateTime
}

model TransaksiPenjualan {
  id     Int    @id @default(autoincrement())
  produk String // JSON format [{ semua field produk }]
  total  Int    @default(0)

  // Parent table
  toko     Toko?   @relation(fields: [tokoId], references: [id])
  tokoId   Int?
  member   Member? @relation(fields: [memberId], references: [id])
  memberId Int?

  createdAt DateTime
  updatedAt DateTime
}
