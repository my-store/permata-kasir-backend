generator client {
  provider = "prisma-client-js"
  output   = "../models"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int     @id @default(autoincrement())
  uuid       String  @unique
  nama       String
  tlp        String  @unique
  password   String
  alamat     String
  foto       String? // URL foto
  online     Boolean @default(false)
  lastOnline String?

  // Child tables
  users              User[]
  userRank           UserRank[]
  userRegisterTicket UserRegisterTicket[]

  createdAt DateTime
  updatedAt DateTime
}

model User {
  id       Int     @id @default(autoincrement())
  uuid     String  @unique
  nama     String
  tlp      String  @unique
  password String
  alamat   String
  foto     String? // URL foto

  online     Boolean @default(false)
  lastOnline String?

  /**
   * ==========================================================
   * |  USER STATUS
   * |  =======================================================
   * |  1. active = Need to activate by admin
   * |  2. deactivatedAt = kapan admin memblokir user ini
   * |  3. deactivatedReason = alasan admin memblokir user ini
   */
  active            Boolean   @default(false)
  deactivatedAt     DateTime?
  deactivatedReason String?

  // Parent table
  admin   Admin @relation(fields: [adminId], references: [id])
  adminId Int

  // Parent table
  userRank   UserRank @relation(fields: [userRankId], references: [id])
  userRankId Int

  // Child tables
  toko Toko[]

  createdAt DateTime
  updatedAt DateTime
}

/**
 * =====================================================
 * |  REGISTER SECURITY TABLE
 * |  =====================================================
 * |  Hanya dapat digunakan dalam waktu beberapa menit saja
 * |  jika batas waktu telah habis, atau telah digunakan
 * |  oleh orang lain, otomatis kode dihapus dan
 * |  tidak dapat digunakan untuk registrasi lagi.
 */
model UserRegisterTicket {
  id   Int    @id @default(autoincrement())
  code String @unique

  // Parent table
  admin      Admin    @relation(fields: [adminId], references: [id])
  adminId    Int
  userRank   UserRank @relation(fields: [userRankId], references: [id])
  userRankId Int
}

/**
 * =====================================================
 * |  ATURAN PENGGUNA
 * |  =====================================================
 * |  Disini menyimpan aturan pengguna gratis dan berbayar
 */
model UserRank {
  id   Int    @id @default(autoincrement())
  uuid String @unique
  nama String

  /**
   * =====================================================
   * |  MAKSIMAL JUMLAH TOKO
   * |  =====================================================
   * |  1. Ultimate
   * |     10 Toko
   * |  2. Pro
   * |     5 Toko
   * |  3. Basic
   * |     3 Toko
   * |  4. Free
   * |     1 Toko
   */
  maxToko Int

  /**
   * ========================================================
   * |  MAKSIMAL JUMLAH PRODUK
   * |  =====================================================
   * |  Per toko (berbayar) maksimal nya memilik 3.000 produk,
   * |  maksimal jumlah produk x maksimal jumlah toko.
   * |  -----------------------------------------------------
   * |  1. Ultimate
   * |     30.000 Produk
   * |  2. Pro
   * |     15.000 Produk
   * |  3. Basic
   * |     9.000 Produk
   * |  4. Free
   * |     500 Produk
   */
  maxProduk Int

  /**
   * ========================================================
   * |  MAKSIMAL JUMLAH JASA
   * |  =====================================================
   * |  Per toko (berbayar) maksimal nya memilik 100 jasa,
   * |  maksimal jumlah jasa x maksimal jumlah toko.
   * |  -----------------------------------------------------
   * |  1. Ultimate
   * |     1.000 Jasa
   * |  2. Pro
   * |     500 Jasa
   * |  3. Basic
   * |     300 Jasa
   * |  4. Free
   * |     50 Jasa
   */
  maxJasa Int

  // Parent table
  admin   Admin @relation(fields: [adminId], references: [id])
  adminId Int

  // Child tables
  user               User[]
  userRegisterTicket UserRegisterTicket[]

  createdAt DateTime
  updatedAt DateTime
}

model Toko {
  id     Int    @id @default(autoincrement())
  uuid   String @unique
  nama   String
  alamat String
  tlp    String @unique

  // Parent table
  user   User @relation(fields: [userId], references: [id])
  userId Int

  // Child tables
  produk             Produk[]
  jasa               Jasa[]
  diskon             Diskon[]
  member             Member[]
  memberRank         MemberRank[]
  transaksiPembelian TransaksiPembelian[]
  transaksiPenjualan TransaksiPenjualan[]

  createdAt DateTime
  updatedAt DateTime
}

model Produk {
  id         Int    @id @default(autoincrement())
  uuid       String @unique
  nama       String
  hargaPokok Int
  hargaJual  Int
  stok       Int

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Many to many relations
  diskon Diskon[]

  createdAt DateTime
  updatedAt DateTime
}

model Jasa {
  id    Int    @id @default(autoincrement())
  uuid  String @unique
  nama  String
  biaya Int

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Many to many relations
  diskon Diskon[]

  createdAt DateTime
  updatedAt DateTime
}

model Diskon {
  id         Int    @id @default(autoincrement())
  uuid       String @unique
  keterangan String // Misal Jum'at berkah
  nilai      Int // Persentase potongan

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Many to many relations
  produk Produk[]
  jasa   Jasa[]

  createdAt DateTime
  updatedAt DateTime
}

model Member {
  id     Int    @id @default(autoincrement())
  uuid   String @unique
  nama   String
  alamat String
  tlp    String @unique

  // Parent table
  toko         Toko        @relation(fields: [tokoId], references: [id])
  tokoId       Int
  // Optional | nullable
  memberRank   MemberRank? @relation(fields: [memberRankId], references: [id])
  memberRankId Int?

  createdAt DateTime
  updatedAt DateTime
}

model MemberRank {
  id   Int    @id @default(autoincrement())
  uuid String @unique
  nama String

  // Potongan spesial member, tidak mempengaruhi diskon pada produk
  // Diskon pada produk tetap berlaku.
  potonganBelanja Int @default(0)

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  // Child tables
  member Member[]

  createdAt DateTime
  updatedAt DateTime
}

model TransaksiPembelian {
  id   Int    @id @default(autoincrement())
  uuid String @unique

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  /**
   * =====================================================
   * |  JSON DATA - TIDAK BERGANTUNG DENGAN RELASI
   * |  =====================================================
   * |  Jika tabel produk dihapus, tidak akan berpengaruh
   * |  pada data JSON ini.
   */
  produk String // Example: [{ id: Important, nama, harga, dll }]

  createdAt DateTime
  updatedAt DateTime
}

model TransaksiPenjualan {
  id   Int    @id @default(autoincrement())
  uuid String @unique

  // Parent table
  toko   Toko @relation(fields: [tokoId], references: [id])
  tokoId Int

  /**
   * =====================================================
   * |  JSON DATA - TIDAK BERGANTUNG DENGAN RELASI
   * |  =====================================================
   * |  Jika tabel produk dihapus, tidak akan berpengaruh
   * |  pada data JSON ini.
   */
  produk String // Example: [{ id: Important, nama, harga, dll }]

  createdAt DateTime
  updatedAt DateTime
}
