generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  // provider = "postgresql"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id         Int      @id @default(autoincrement())
  nama       String
  tlp        String   @unique
  password   String
  foto       String   @default("") // URL foto
  online     Boolean  @default(false)
  lastOnline String   @default("")
  createdAt  DateTime
  updatedAt  DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  nama      String
  tlp       String   @unique
  password  String
  foto      String   @default("") // URL foto
  createdAt DateTime
  updatedAt DateTime

  online     Boolean @default(false)
  lastOnline String  @default("")

  active        Boolean @default(false) // Need to activate by admin
  deactivatedAt String  @default("") // This is empty until admin block this user
}
